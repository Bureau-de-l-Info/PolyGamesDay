{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "",
  "type": "object",
  "properties": {
    "games": {
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "items": {
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "sections": {
            "type": "array",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
              "required": [
                "title",
                "content"
              ],
              "properties": {
                "title": {
                  "type": "string",
                  "minLength": 1
                },
                "content": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          },
          "media": {
            "type": "array",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
              "required": [
                "type",
                "path"
              ],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["logo", "video"],
                  "minLength": 1
                },
                "path": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          }
        }
      }
    }
  },
  "required": [
    "games"
  ]
}
